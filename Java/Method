// 
Method -Function in class Known as Method

Syntax of Adding two number;
    import java.util.Scanner;
    public class ExampleMethod {

      static int sum(int a,int b){
        int c=a+b;
        return c;
    }

     public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int total=sum(a,b);
        System.out.println(total);
    }
}


Syntax for Greeting Message;

import java.util.Scanner;
public class Main{
Scanner sc=new Scanner(System.in);
public static void main (String args []){
greet();
}

static void greet(){
String name=sc.next();
System.out.println("Hello "+name);
}
}










